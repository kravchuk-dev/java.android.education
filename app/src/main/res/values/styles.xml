<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonBase" parent="TextAppearance.AppCompat">
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">24sp</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="ButtonOperation" parent="ButtonBase">
        <item name="android:background">@drawable/calc_btn_shape</item>
        <item name="android:textColor">@color/calc_btn_text</item>
    </style>

    <style name="ButtonDigit" parent="ButtonBase">
        <item name="android:background">@drawable/calc_digit_shape</item>
        <item name="android:textColor">@color/calc_digit_text</item>
    </style>

    <style name="ButtonEqual" parent="ButtonBase">
        <item name="android:background">@drawable/calc_equal_shape</item>
        <item name="android:textColor">@color/calc_equal_text</item>
    </style>
</resources>